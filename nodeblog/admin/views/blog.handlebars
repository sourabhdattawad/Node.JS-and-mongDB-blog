{{!-- {{>blog-nav}} --}}
<nav class="top-nav">
  <div class="container">
    <div class="nav-wrapper">
      <a href="#" data-activates="nav-mobile" class="button-collapse show-on-large  top-nav full  "><i class="material-icons">menu</i></a>
    </div>
  </div>
</nav>


<p class="center-align">
	<a class="waves-effect waves-light btn-large" href="/update/blog/post/create">Add a new Blog</a>
</p>
<ul id="nav-mobile" class="side-nav ">
  <li class="bold"><h3>Categories</h3></li>
  <li class="search">
    <nav>
      <div class="nav-wrapper">
        <form>
          <div class="input-field">
            <input placeholder="Search"id="search" type="search" style="background-color:white;" required >
            <label for="search"><i class="material-icons">search</i></label>
            <i class="material-icons">close</i>
          </div>
        </form>
      </div>
    </nav>
  </li>
  <li class="bold"><a href="/update/blog/category/" class="waves-effect waves-teal">Add Category</a></li>
  {{#each category}}
  <li class="bold"><a href="/update/blog/{{name}}/" class="waves-effect waves-teal">{{name}}</a></li>
  {{/each}}
  
</ul>
<h5 class="center-align">All blogs</h5>
 <ul class="collection container">
 	{{#each blog}}
      <li class="collection-item">
      	<div>
      		<p>{{title}}
      		<span class="" style="float:right"><a href="/update/blog/edit/{{id}}">edit</a><br><a href="/update/blog/delete/{{id}}">delete</a></span>
      		</p>
	    </div>
  	  </li>
      {{/each}}

 </ul>