{{!-- {{>blog-nav}} --}}
<nav class="top-nav">
  <div class="container">
    <div class="nav-wrapper">
      <a href="#" data-activates="nav-mobile" class="button-collapse show-on-large  top-nav full  "><i class="material-icons">menu</i></a>
    </div>
  </div>
</nav>


<p class="center-align">
	<a class="waves-effect waves-light btn-large" href="/update/blog/post/create">Add a new Blog</a>
</p>
<ul id="nav-mobile" class="side-nav ">
  <li class="bold"><h3>Categories</h3></li>
  <li class="search">
    <nav>
      <div class="nav-wrapper">
        <form>
          <div class="input-field">
            <input placeholder="Search"id="search" type="search" style="background-color:white;" required >
            <label for="search"><i class="material-icons">search</i></label>
            <i class="material-icons">close</i>
          </div>
        </form>
      </div>
    </nav>
  </li>
  <li class="bold"><a href="/update/blog/category/" class="waves-effect waves-teal">Add Category</a></li>
  {{#each category}}
  <li class="bold"><a href="/update/blog/{{name}}/" class="waves-effect waves-teal">{{name}}</a></li>
  {{/each}}
  
</ul>
<div class="row">
	<div class="container">
		<div class="center-align">
    <form class="col s12" method="post" action={{#if edit}}"/update/blog/edit/{{blog.id}}"{{else}} "/update/blog/post/create"{{/if}}>
    	<div class="row">
		    <div class="input-field col s6">
		      <input id="title" type="text" class="validate" name="title" value="{{blog.title}}">
		      <label class="active left-align" for="title" >Title</label>
		    </div>
		    <div class="input-field col s6">
		    <select name="category">
		    	{{#each category}}
		      <option value="{{name}}" >{{name}}</option>
		      	{{/each}}
		    </select>
		    <label>Category</label>
		  </div>
		</div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="description" class="materialize-textarea" name="description">{{blog.description}}</textarea>
          <label for="description">Description</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" >Submit
    <i class="material-icons right">send</i>
	  </button>
    </form>
    </div>
	</div>
</div>
        